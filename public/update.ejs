  <body>
    <form action="/updateData" method="post">
      <div class="form">
        <h1>Form</h1>
        <input
          type="text"
          placeholder="Please enter your product title."
          name="title"
          id="title"
          required
          value="<%= obj.title %>"
        />
        <br />
        <input
          type="number"
          placeholder="Please enter your product price."
          name="price"
          id="price"
          required
          value="<%= obj.price %>"
        />
        <br />
        <input
          type="text"
          placeholder="Please enter your product description."
          name="description"
          id="description"
          required
          value="<%= obj.description %>"
        />
        <br />
        <input
          type="text"
          placeholder="Please enter your product image url."
          name="imgUrl"
          id="imgUrl"
          required
          value="<%= obj.imgUrl %>"
        />
        <br />
        <input
          type="text"
          placeholder="Please enter your product UUID."
          name="UUID"
          id="UUID"
          required
          value="<%= obj.UUID %>"
        />
        <input type="hidden" name="id" value="<%= obj._id %>" />
        <br />
        <button type="submit" class="form-but">Send</button>
      </div>
    </form>

